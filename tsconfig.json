{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@deliveryapp/auth": ["libs/auth/src"],
      "@deliveryapp/auth/*": ["libs/auth/src/*"],
      "@deliveryapp/users": ["libs/users/src"],
      "@deliveryapp/users/*": ["libs/users/src/*"],
      "@deliveryapp/common": ["libs/common/src"],
      "@deliveryapp/common/*": ["libs/common/src/*"],
      "@deliveryapp/config": ["libs/config/src"],
      "@deliveryapp/config/*": ["libs/config/src/*"],
      "@deliveryapp/core": ["libs/core/src"],
      "@deliveryapp/core/*": ["libs/core/src/*"],
      "@deliveryapp/database": ["libs/database/src"],
      "@deliveryapp/database/*": ["libs/database/src/*"],
      "@deliveryapp/logs": ["libs/logs/src"],
      "@deliveryapp/logs/*": ["libs/logs/src/*"],
      "@deliveryapp/messages": ["libs/messages/src"],
      "@deliveryapp/messages/*": ["libs/messages/src/*"],
      "@deliveryapp/orders": ["libs/orders/src"],
      "@deliveryapp/orders/*": ["libs/orders/src/*"],
      "@deliveryapp/payments": ["libs/payments/src"],
      "@deliveryapp/payments/*": ["libs/payments/src/*"],
      "@deliveryapp/settings": ["libs/settings/src"],
      "@deliveryapp/settings/*": ["libs/settings/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
